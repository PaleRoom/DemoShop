<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_table_customer" author="Nicolas">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="customer"/>
            </not>
        </preConditions>
        <createTable tableName="customer">
            <column name="id" type="uuid" remarks="ID заказчика">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>

            <column name="customer_surname" type="varchar(64)" remarks="Фамилия заказчика">
                <constraints nullable="false"/>
            </column>

            <column name="customer_name" type="varchar(64)" remarks="Имя заказчика">
                <constraints nullable="false"/>
            </column>

            <column name="customer_patronymic" type="varchar(64)" remarks="Отчество заказчика">
                <constraints nullable="false"/>
            </column>

            <column name="customer_email" type="varchar(64)" remarks="Email заказчика">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="customer_phone_number" type="varchar(64)" remarks="номер телефона заказчика">
                <constraints nullable="false"/>
            </column>

            <column name="customer_update" type="datetime" remarks="Дата обновления пользователя"
                    defaultValueDate="NOW()">
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>