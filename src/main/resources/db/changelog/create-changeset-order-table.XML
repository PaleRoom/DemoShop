<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <!-- Здесь мы позже напишем скрипт -->
        <changeSet id="create_table_orders" author="Nicolas">
                <preConditions onFail="MARK_RAN">
                        <not>
                                <tableExists tableName="orders"/>
                        </not>
                </preConditions>
                <createTable tableName="orders">
                        <column name="id" type="uuid">
                                <constraints primaryKey="true" nullable="false" unique="true"/>
                        </column>

                        <column name="customer_id" type="uuid">
                                <constraints nullable="false"
                                             foreignKeyName="order_customer_id_fk"
                                             referencedTableName="customer"
                                             referencedColumnNames="id" />
                        </column>


                        <column name="order_total" type="double">
                        </column>

                        <column name="order_status" type="varchar(64)">
                        </column>

                        <column name="order_create" type="datetime">
                        </column>

                        <column name="order_update" type="datetime">
                        </column>
                </createTable>

        </changeSet>
</databaseChangeLog>